<UserControl x:Class="LibreLinkConnector.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Border Style="{StaticResource CardStyle}"
            MaxWidth="600"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Text="Welcome Back" 
                       Style="{StaticResource TitleTextStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Sign in to monitor blood glucose levels" 
                       Style="{StaticResource SecondaryTextStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,32"/>
            
            <TextBlock Text="Email Address" 
                       Style="{StaticResource BodyTextStyle}"
                       Margin="0,0,0,8"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource ModernTextBoxStyle}"
                     Margin="0,0,0,20"/>
            
            <TextBlock Text="Password" 
                       Style="{StaticResource BodyTextStyle}"
                       Margin="0,0,0,8"/>
            <PasswordBox x:Name="PasswordBox" 
                         Style="{StaticResource ModernPasswordBoxStyle}"
                         Margin="0,0,0,20"
                         KeyDown="PasswordBox_KeyDown"/>
            
            <CheckBox IsChecked="{Binding RememberMe}" 
                      Content="Remember me" 
                      Margin="0,0,0,24"
                      FontSize="14"
                      Foreground="{DynamicResource TextBrush}"/>
            
            <Button Content="Sign In" 
                    Style="{StaticResource ModernButtonStyle}"
                    HorizontalAlignment="Stretch"
                    Height="44"
                    IsEnabled="{Binding IsLoginButtonEnabled}"
                    Click="LoginButton_Click"/>
            
            <ScrollViewer MaxHeight="100" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,16,0,0"
                          Visibility="{Binding IsStatusVisible, Converter={StaticResource BoolToVisConverter}}">
                <TextBlock Text="{Binding StatusText}" 
                           Style="{StaticResource SecondaryTextStyle}"
                           Foreground="{Binding StatusBrush}"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </ScrollViewer>
        </StackPanel>
    </Border>
</UserControl>
