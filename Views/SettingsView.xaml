<UserControl x:Class="LibreLinkConnector.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="0" Padding="24" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="âš™ Settings" 
                           Style="{StaticResource TitleTextStyle}"
                           Margin="0,0,0,24"/>

                <!-- Update Interval -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Auto-Update Interval" 
                                   Style="{StaticResource SubtitleTextStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="How often to check for new glucose readings (in minutes)" 
                                   Style="{StaticResource SecondaryTextStyle}"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider Grid.Column="0"
                                    Value="{Binding UpdateIntervalMinutes, Mode=TwoWay}"
                                    Minimum="1" 
                                    Maximum="30" 
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"/>
                            
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding UpdateIntervalMinutes, StringFormat={}{0} min}"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="Bold"
                                       MinWidth="60"
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Server Selection -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Server Region" 
                                   Style="{StaticResource SubtitleTextStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <RadioButton Content="European Server (api-eu.libreview.io)"
                                     IsChecked="{Binding UseEuropeanServer, Mode=TwoWay}"
                                     GroupName="ServerRegion"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>
                        
                        <RadioButton Content="Global Server (api.libreview.io)"
                                     IsChecked="{Binding UseGlobalServer, Mode=TwoWay}"
                                     GroupName="ServerRegion"
                                     FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Theme Selection -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Theme" 
                                   Style="{StaticResource SubtitleTextStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Choose your preferred color theme" 
                                   Style="{StaticResource SecondaryTextStyle}"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>
                        
                        <RadioButton Content="â˜€ Light - Bright theme with light backgrounds"
                                     IsChecked="{Binding IsLightTheme, Mode=TwoWay}"
                                     GroupName="ThemeSelection"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>
                        
                        <RadioButton Content="ðŸŒ™ Dark - Dark theme with dark backgrounds"
                                     IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"
                                     GroupName="ThemeSelection"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>
                        
                        <RadioButton Content="âš™ System - Follows your Windows theme"
                                     IsChecked="{Binding IsSystemTheme, Mode=TwoWay}"
                                     GroupName="ThemeSelection"
                                     FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Glucose Units -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Glucose Units" 
                                   Style="{StaticResource SubtitleTextStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <RadioButton Content="mg/dL (milligrams per deciliter)"
                                     IsChecked="{Binding IsMgDlSelected, Mode=TwoWay}"
                                     GroupName="GlucoseUnit"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>
                        
                        <RadioButton Content="mmol/L (millimoles per liter)"
                                     IsChecked="{Binding IsMmolLSelected, Mode=TwoWay}"
                                     GroupName="GlucoseUnit"
                                     FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Thresholds -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Glucose Thresholds" 
                                   Style="{StaticResource SubtitleTextStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Show notifications for high/low glucose levels"
                                  IsChecked="{Binding ShowNotifications, Mode=TwoWay}"
                                  FontSize="14"
                                  Margin="0,0,0,15"/>
                        
                        <!-- mg/dL Thresholds -->
                        <StackPanel Visibility="{Binding MgDlPanelVisibility}">
                            <TextBlock Text="Thresholds (mg/dL)" 
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="High Glucose Threshold" 
                                           Style="{StaticResource BodyTextStyle}"
                                           VerticalAlignment="Center"/>
                                
                                <TextBox Grid.Column="1"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Text="{Binding HighThresholdMgDl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         TextAlignment="Right"
                                         Padding="5"/>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Low Glucose Threshold" 
                                           Style="{StaticResource BodyTextStyle}"
                                           VerticalAlignment="Center"/>
                                
                                <TextBox Grid.Column="1"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Text="{Binding LowThresholdMgDl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         TextAlignment="Right"
                                         Padding="5"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- mmol/L Thresholds -->
                        <StackPanel Visibility="{Binding MmolLPanelVisibility}">
                            <TextBlock Text="Thresholds (mmol/L)" 
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="High Glucose Threshold" 
                                           Style="{StaticResource BodyTextStyle}"
                                           VerticalAlignment="Center"/>
                                
                                <TextBox Grid.Column="1"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Text="{Binding HighThresholdMmol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         TextAlignment="Right"
                                         Padding="5"/>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Low Glucose Threshold" 
                                           Style="{StaticResource BodyTextStyle}"
                                           VerticalAlignment="Center"/>
                                
                                <TextBox Grid.Column="1"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Text="{Binding LowThresholdMmol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         TextAlignment="Right"
                                         Padding="5"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- About -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ About" 
                                   Style="{StaticResource SubtitleTextStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="LibreLink Connector v1.0" 
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,0,5"/>
                        
                        <TextBlock Text="A Windows application to monitor blood glucose levels using the LibreLinkUp API." 
                                   Style="{StaticResource SecondaryTextStyle}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SurfaceBrush}" 
                Padding="20"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="Cancel" 
                        Style="{StaticResource ModernButtonStyle}"
                        Background="#757575"
                        Width="120"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>
                
                <Button Content="Save" 
                        Style="{StaticResource ModernButtonStyle}"
                        Width="120"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
