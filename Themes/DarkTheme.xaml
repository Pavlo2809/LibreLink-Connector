<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors (Windows 11 Weather Style) -->
    <Color x:Key="PrimaryColor">#60CDFF</Color>
    <Color x:Key="SecondaryColor">#4CB4E7</Color>
    <Color x:Key="AccentColor">#60CDFF</Color>
    
    <Color x:Key="BackgroundColor">#202020</Color>
    <Color x:Key="SurfaceColor">#2B2B2B</Color>
    <Color x:Key="CardColor">#2B2B2B</Color>
    
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#BEBEBE</Color>
    <Color x:Key="TextTertiaryColor">#8A8A8A</Color>
    
    <Color x:Key="ErrorColor">#FF6B6B</Color>
    <Color x:Key="SuccessColor">#6BCF7F</Color>
    <Color x:Key="WarningColor">#FFB84D</Color>
    
    <Color x:Key="BorderColor">#3D3D3D</Color>
    <Color x:Key="HoverColor">#373737</Color>
    
    <!-- Gradient Colors -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1E1E1E" Offset="0"/>
        <GradientStop Color="#2D2D2D" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
</ResourceDictionary>
